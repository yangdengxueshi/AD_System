<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dexin.ad_system">

    <!-- 申请  访问SD卡的权限 TODO 需要申请运行时权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- 申请 挂载与卸载文件系统的权限-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <!-- 申请  访问网络的权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 申请  访问网络状态的权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 申请  改变网络状态的权限 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>

    <!-- 申请  访问Wifi状态的权限 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 申请  改变Wifi状态的权限 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <!-- 申请  改变Wifi的多点传播状态 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>

    <!-- 阻止设备进入休眠状态 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <!-- 使得 键防护 无效 -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>

    <!--TODO 自定义权限-->
    <permission
        android:name="custom.permission.LongRunningUDPService"
        android:protectionLevel="normal"/>

    <application
        android:name=".util.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            android:launchMode="singleInstance"
            android:screenOrientation="landscape">
            <intent-filter>
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.DEFAULT"/>

                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name=".service.LongRunningUDPService"
            android:enabled="true"
            android:exported="true"
            android:permission="custom.permission.LongRunningUDPService">
        </service>
    </application>
</manifest>
